<h1>My Tasks</h1>
<ul>
<% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(task) %>
<%= task.details %>
<%= task.completed %>
<%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<%end %>
</ul>

<div class="margin20">
<%= link_to "Add a task", new_task_path%>
</div>

